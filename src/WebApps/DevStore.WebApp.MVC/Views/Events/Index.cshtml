@model IEnumerable<DevStore.Core.Data.EventSourcing.StoredEvent>

@{
    ViewData["Title"] = "Events";
}

<div class="text-center">
    @{
        if (Model?.Any() == true)
        {
            <table class="table table-sm table-bordered table-hover col-md-12">
                <thead class="table-dark">
                    <tr>
                        <td>Id</td>
                        <td>Name</td>
                        <td>Date</td>
                        <td>JSON</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var evento in Model)
                    {
                        <tr>
                            <td>@evento.Id</td>
                            <td>@evento.Type</td>
                            <td>@evento.DateAt</td>
                            <td><code>@evento.Data</code></td>
                        </tr>
                    }
                </tbody>
            </table>

        }
        else
        {
            <p>N/A</p>
        }
    }
</div>
