@model IEnumerable<DevStore.Catalog.Application.Dtos.CourseDto>

@{
    ViewData["Title"] = "Show room";
}
<style>
    h4 {
        font-weight: 600;
    }

    p {
        font-size: 12px;
        margin-top: 5px;
    }

    .price {
        font-size: 30px;
        margin: 0 auto;
        color: #333;
    }

    .right {
        float: right;
        border-bottom: 2px solid #4B8E4B;
    }

    .thumbnail {
        opacity: 0.70;
        -webkit-transition: all 0.5s;
        transition: all 0.5s;
    }

        .thumbnail:hover {
            opacity: 1.00;
            box-shadow: 0px 0px 10px #4bc6ff;
        }

    .line {
        margin-bottom: 5px;
    }

    @@media screen and (max-width: 770px) {
        .right {
            float: left;
            width: 100%;
        }
    }

    .product_view .modal-dialog {
        max-width: 800px;
        width: 100%;
    }

    .pre-cost {
        text-decoration: line-through;
        color: #a5a5a5;
    }

    .space-ten {
        padding: 10px 0;
    }
</style>
<div class="container">

    <h1>Courses management</h1>
    <hr />
    <div class="row">
        <a asp-controller="AdminCourses" asp-action="NewCourse" class="btn btn-success right">+ new Course</a>
    </div>
    <hr />
    <div class="row">
        <!-- BEGIN PRODUCTS -->
        @{
            foreach (var course in Model.OrderBy(p => p.CategoryId))
            {
            <div class="col-md-3 col-sm-6">
                <span class="thumbnail">
                    <img width="200" height="200" src="~/Images/@course.Image" />
                    <h4>@course.Name</h4>
                    <p>@course.PlacesAvailable vacancies</p>
                    <p>@course.Description</p>
                    <p class="price">@course.Price.ToString("C")</p>
                    <hr class="line">
                    <div class="row">
                        <a asp-controller="AdminCourses" asp-action="EditCourse" asp-route-id="@course.Id" class="btn btn-success right">Edit</a> &nbsp;
                        <a asp-controller="AdminCourses" asp-action="UpdateSlot" asp-route-id="@course.Id" class="btn btn-info right">Class limit</a>
                    </div>
                </span>
            </div>
            }
        }

        <!-- END PRODUCTS -->
    </div>
</div>

